# Конфигурация проекта
PROJECT_DIR=../../
OUTPUT_PATH=../generated/documentation.md
LOG_PATH=./logs/doc-generation.log
LOG_LEVEL=info
STATE_DIR=.doc-state
MAX_TOC_GROUPING_DEPTH=2

# Директории проекта
FRAMEWORK_DIR=martyrs
SOURCE_DIR=src

# Настройки OpenAI API
OPENAI_API_KEY=
OPENAI_ORG_KEY=

OPENAI_MODEL=gpt-4o-mini

# Настройки обработки
BATCH_SIZE=5
BATCH_DELAY=1000
MAX_TOKENS=4000
MIN_SECTION_LENGTH=200
GENERATE_EXAMPLES=true
INCLUDE_ARCHITECTURE_DIAGRAMS=true

# Настройки контекстной памяти и обучения
USE_MEMORY_FOR_CONTEXT=true
EXISTING_DOCS_PATH=./existing-docs
MAX_CONTEXT_TOKENS=4000
MAX_NEW_TOKENS=1500
MIN_TOKENS_FOR_SUMMARY=1000
MAX_RELATED_DOCUMENTS=3
USE_SYSTEM_PROMPT=true
USE_CONTINUATION=true

# Информация о проекте для контекстной памяти
PROJECT_NAME=Martyrs Project
PROJECT_DESCRIPTION=Проект, использующий фреймворк martyrs
PROJECT_VERSION=1.0.0
PROJECT_LANGUAGE=javascript
PROJECT_FRAMEWORK=martyrs